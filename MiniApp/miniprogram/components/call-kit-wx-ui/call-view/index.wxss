.necall-container,
.necall-invite-container,
.necall-be-invited-container,
.necall-in-call-container {
  position: relative;
  height: 100%;
  width: 100%;
}

.necall-callee-info {
  position: absolute;
  right: 10px;
  top: 30px;
  color: #fff;
  text-align: right;
  display: flex;
  justify-content: end;
}

.necall-callee-avatar {
  width: 60px;
  height: 60px;
  margin-left: 10px;
  border-radius: 8px;
}

.necall-callee-nickname {
  font-size: 18px;
  margin-bottom: 5px;
}

.necall-caller-info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 100px;
  color: #fff;
  text-align: center;
}

.necall-caller-avatar {
  width: 90px;
  height: 90px;
  border-radius: 8px;
}

.necall-caller-nickname {
  margin: 10px;
  font-size: 20px;
}

.necall-calling-btn-group,
.necall-called-btn-group {
  padding: 0 20px;
  position: absolute;
  bottom: 40px;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #fff;
  text-align: center;
}

.necall-btn .necall-img {
  display: block;
  margin-bottom: 5px;
  width: 75px;
  height: 75px;
}

.necall-remote-view {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #292932;
}

.necall-local-view {
  position: absolute;
  top: 30px;
  right: 20px;
  width: 125px;
  height: 202px;
  background-color: #292932;
}

.necall-in-call-audio {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 100px;
  color: #fff;
  text-align: center;
}

.necall-in-call-avatar {
  width: 90px;
  height: 90px;
  border-radius: 8px;
}

.necall-in-call-title {
  margin: 10px;
  font-size: 20px;
}


.necall-in-call-btn-group {
  padding: 0 20px;
  position: absolute;
  bottom: 50px;
  left: 50%;
  transform: translateX(-50%);
  width: 224px;
  height: 60px;
  background: linear-gradient(180deg, #393947 6.82%, #292933 99.71%);
  box-shadow: inset 0px 1px 0px rgba(255, 255, 255, 0.0983938);
  border-radius: 30px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 10;
}

.necall-camera-revert-btn {
  position: absolute;
  top: 10px;
  height: 30px;
  width: 30px;
  left: 10px;
  z-index: 10;
}
.necall-in-call-duration {
  position: absolute;
  top: 10px;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  z-index: 99;
}
.necall-in-call-video-mute-tips {
  position: absolute;
  text-align: center;
  width: 100%;
  top: 40%;
  transform: translateY(-50%);
  color: #fff;
  font-size: 20px;
}

.necall-microphone-btn {
  width: 24px;
  height: 24px;
}

.necall-switch-btn {
  width: 24px;
  height: 24px;
}

.necall-video-btn {
  width: 24px;
  height: 24px;
}

.necall-hangup-btn {
  width: 32px;
  height: 32px;
}